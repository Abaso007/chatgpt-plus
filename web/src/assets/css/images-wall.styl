.page-images-wall {
  display: flex;
  background-color: #282c34;

  .inner {
    width 100%
    color #ffffff
    overflow hidden

    .header {
      display flex
      padding 0 40px

      h2 {
        width 300px
      }

      .settings {
        width 100%
        display flex
        justify-content right

        .el-radio-group {
          font-size 16px

          .el-radio {
            color #ffffff
          }

        }
      }
    }

    .waterfall {
      position: relative;
      margin: 0 auto;
      overflow-y auto
      overflow-x hidden
    }

  }

  .custom-scroll {
    /* 修改滚动条的颜色 */

    ::-webkit-scrollbar {
      width: 10px; /* 滚动条宽度 */
    }

    /* 修改滚动条轨道的背景颜色 */

    ::-webkit-scrollbar-track {
      background-color: #282C34;
    }

    /* 修改滚动条的滑块颜色 */

    ::-webkit-scrollbar-thumb {
      background-color: #444444;
      border-radius 10px
    }

    /* 修改滚动条的滑块的悬停颜色 */

    ::-webkit-scrollbar-thumb:hover {
      background-color: #666666;
    }
  }
}