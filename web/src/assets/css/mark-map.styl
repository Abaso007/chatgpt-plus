.page-mark-map {
  // background-color: #282c34;
  height 100%

  .inner {
    display: flex;

    .mark-map-box {
      margin 10px
      // background-color #262626
      // border 1px solid #454545
      min-width 300px
      max-width 300px
      padding 10px
      border-radius 10px
      color var(--text-theme-color);
      font-size 14px

      h2 {
        font-weight: bold;
        font-size 20px
        text-align center
        color var( --theme-textcolor-normal)
      }

      // 隐藏滚动条

      ::-webkit-scrollbar {
        width: 0;
        height: 0;
        background-color: transparent;
      }

      .mark-map-params {
        margin-top 10px
        overflow auto


        .param-line {
          padding 10px

          .el-button {
            width 100%

            span {
              color #fff
            }
          }

        }

        .text-info {
          padding 10px

          .el-tag {
            margin-right 10px
          }
        }
      }
    }

    .el-form {
      .el-form-item__label {
        color var(--text-theme-color)
      }
    }


    .chat-box {
      width 100%
      background: var(--chat-bg);


      .top-bar {
        display flex
        justify-content right
        align-items center
        padding 10px 20px 10px 10px
      }

      .markdown {
        color var(--text-theme-color)
        display flex
        justify-content center
        align-items center

        h1 {
          color: var( --theme-textcolor-normal);
        }

        h2 {
          color: #ffcc00;
        }

        ul {
          list-style-type: disc;
          margin-left: 20px;

          li {
            line-height 1.5
          }
        }

        strong {
          font-weight: bold;
        }

        em {
          font-style: italic;
        }
      }

      .body {
        display flex
        justify-content center
        align-items center
        position relative

        .markmap {
          width 100%
          color var(--text-theme-color)
          font-size 12px

          .markmap-foreign {
            //height 30px
          }
        }

        #toolbar {
          position: absolute
          bottom: 10px
          right: 20px
          display: flex;

          .mm-toolbar {
            line-height: 36px;
            display flex
            flex-flow row
            margin-left: 10px;

            .mm-toolbar-brand {
              display none
            }

            .mm-toolbar-item {
              cursor pointer
              color var( --text-fb)
            }
          }

        }
      }
    }
  }
}

